<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent"
    android:background="@color/common_google_signin_btn_text_light_pressed"
    android:orientation="vertical">

    <TextView
        style="@style/MatchWidth"
        android:layout_marginLeft="@dimen/padding_start"
        android:background="@color/bright_foreground_disabled_material_light"
        android:paddingTop="@dimen/padding_actionbar"
        android:text="@string/text_select_user_to_call"
        android:textColor="@color/blue"
        android:textColorHint="@color/accent_material_dark"
        tools:ignore="RtlHardcoded" />

    <ListView
        android:id="@+id/list_opponents"
        style="@style/MatchWidth"
        android:background="@color/primary_text_default_material_light"
        android:cacheColorHint="@color/color_blue_qb"
        android:divider="@android:color/transparent"
        android:entries="@color/blue"
        android:paddingTop="@dimen/padding_top" />

</LinearLayout>