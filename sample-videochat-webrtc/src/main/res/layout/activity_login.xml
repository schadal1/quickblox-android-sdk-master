<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_login_activity"
    style="@style/MatchParent"
    android:layout_marginLeft="@dimen/padding_start"
    android:background="@color/common_google_signin_btn_text_light_pressed"
    android:orientation="vertical">

    <TextView
        style="@style/MatchWidth"
        android:layout_height="70dp"
        android:background="@color/toggle_button_background_normal"
        android:paddingTop="@dimen/padding_actionbar"
        android:text="@string/text_welcoming_message"
        android:textColor="@color/color_blue_accent"
        android:textColorHint="@color/button_end_call_pressed_color" />

    <EditText
        android:id="@+id/user_name"
        style="@style/MatchWidth"
        android:hint="@string/hint_user_name"
        android:paddingTop="@dimen/padding_top"
        android:singleLine="true"
        android:text="VuzixRama"
        android:textColor="@color/color_accent"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/chat_room_name"
        style="@style/MatchWidth"
        android:hint="@string/hint_chat_room_name"
        android:paddingTop="@dimen/padding_top"
        android:singleLine="true"
        android:text="myroom"
        android:textColor="@color/color_accent"
        android:textSize="16sp" />

</LinearLayout>